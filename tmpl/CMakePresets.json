{
  "version": 4,
  "cmakeMinimumRequired": {"major": 3, "minor": 23, "patch": 0},
  "configurePresets": [
    {
		"name": "cue2mkc",
		"hidden": true,
		"condition": {"type": "equals","lhs": "${hostSystemName}","rhs": "Windows"},
		"environment": {
			"CUE2MKC_WORKDIR": "@CUE2MKC_WORKDIR@",
			"WXWIDGETS_DIR": "@WXWIDGETS_DIR@"
		},
		"cacheVariables": {
			"wxWidgets_ROOT_DIR": {
				"type": "PATH",
				"value": "$env{WXWIDGETS_DIR}"
			},
			"FETCHCONTENT_QUIET": {
				"type": "BOOL",
				"value": true
			},
			"FETCHCONTENT_UPDATES_DISCONNECTED": {
				"type": "BOOL",
				"value": true
			}
		}
	},
	{
		"name": "mingw",
		"hidden": true,
		"inherits": "cue2mkc",
		"environment": {
			"MINGW_DIR": "@MINGW_DIR@",
			"CMAKE_COLOR_DIAGNOSTICS": "OFF",
			"CMAKE_BUILD_PARALLEL_LEVEL": "@PARALLEL_LEVEL@"
		},
		"cacheVariables": {
		}
	},
    {
		"name": "mingw64",
		"hidden": false,
		"inherits": "mingw",
		"environment": {
			"WXWIDGETS_LIB_DIR_NAME": "@WX_MW64_DLL_SUFFIX@",
			"CMAKE_PROGRAM_PATH": "$env{CUE2MKC_WORKDIR}/ninja;$env{MINGW_DIR}/bin;$env{MINGW_DIR}/x86_64-w64-mingw32/bin;$env{MINGW_DIR}/opt/bin;$env{WXWIDGETS_DIR}/lib/$env{WXWIDGETS_LIB_DIR_NAME}",
			"CFLAGS": "\"-ffile-prefix-map=${fileDir}=.\" \"-ffile-prefix-map=$env{WXWIDGETS_DIR}=./wx\"",
			"CXXFLAGS": "\"-ffile-prefix-map=${fileDir}=.\" \"-ffile-prefix-map=$env{WXWIDGETS_DIR}=./wx\""
		},
		"cacheVariables": {
			"wxWidgets_LIB_DIR": {
				"type": "PATH",
				"value": "$env{WXWIDGETS_DIR}/lib/$env{WXWIDGETS_LIB_DIR_NAME}_x64_dll"
			},
			"WXWIDGETS_CFG_FILE": {
				"type": "FILEPATH",
				"value": "$env{WXWIDGETS_DIR}/mingw64-config.cmake"
			},
			"MINGW_CFG_FILE": {
				"type": "FILEPATH",
				"value": "$env{MINGW_DIR}/mingw-config.cmake"
			},
			"CMAKE_CONFIGURATION_TYPES": {
				"type": "STRING",
				"value": "Debug;Release;MinSizeRel;RelWithDebInfo"
			}
		},
		"generator": "Ninja Multi-Config",
		"toolchainFile": "$env{MINGW_DIR}/mingw-toolchain.cmake",
		"binaryDir": "../build/mingw64",
		"installDir": "../install/mingw64"
	},
    {
		"name": "msvc",
		"hidden": true,
		"inherits": "cue2mkc",
		"environment": {
			"WXWIDGETS_LIB_DIR_NAME": "@WX_MSVC_DLL_SUFFIX@"
		},
		"cacheVariables": {
			"wxWidgets_LIB_DIR": {
				"type": "PATH",
				"value": "$env{WXWIDGETS_DIR}/lib/$env{WXWIDGETS_LIB_DIR_NAME}_x64_dll"
			},
			"WXWIDGETS_CFG_FILE": {
				"type": "FILEPATH",
				"value": "$env{WXWIDGETS_DIR}/msvc-config.cmake"
			}
		},
		"generator": "Visual Studio 17 2022",
		"toolset": "v143,host=x64"
	},
	{
		"name": "msvc-x64",
		"displayName": "MSVC17 x64",
		"inherits": "msvc",
		"binaryDir": "../build/msvc-x64",
		"installDir": "../install/msvc-x64"
	}
  ],
  "buildPresets": [
    {
		"name": "cue2mkc",
		"hidden": true,
		"condition": {"type": "equals","lhs": "${hostSystemName}","rhs": "Windows"},
		"targets": ["wxCueChapters", "wxCueChaptersGui"],
		"inheritConfigureEnvironment": true
	},
	{
		"name": "mingw",
		"hidden": true,
		"inherits": "cue2mkc"
	},
	{
		"name": "msvc",
		"hidden": true,
		"inherits": "cue2mkc"
	},
	{
		"name": "debug",
		"hidden": true,
		"cleanFirst": false,
		"configuration": "Debug",
		"jobs": 1
	},
	{
		"name": "release",
		"hidden": true,
		"cleanFirst": true,
		"configuration": "MinSizeRel",
		"jobs": @PARALLEL_LEVEL@
	},
	{
		"name": "mingw64-release",
		"displayName": "MinGW64 Release",
		"inherits": ["mingw", "release"],
		"configurePreset": "mingw64"
	},
	{
		"name": "mingw64-debug",
		"displayName": "MinGW64 Debug",
		"inherits": ["mingw", "debug"],
		"configurePreset": "mingw64"
	},
	{
		"name": "msvc-release-x64",
		"displayName": "MSVC Release x64",
		"inherits": ["msvc", "release"],
		"configurePreset": "msvc-x64"
	},
	{
		"name": "msvc-debug-x64",
		"displayName": "MSVC Debug x64",
		"inherits": ["msvc", "debug"],
		"configurePreset": "msvc-x64"
	}	
  ]
}
